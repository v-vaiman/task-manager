{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "noEmitHelpers": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "core-js",
      "firebase",
      "jasmine",
      "node"
    ]
  },

  "exclude": [
    "node_modules",
    "target",
    "tmp"
  ],

  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
