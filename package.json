{
  "name": "task-manager",
  "version": "1.0",
  "description": "Todo app with Angular, AngularFire2, and Firebase",
  "homepage": "https://github.com/v-vaiman/task-manager",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/v-vaiman/task-manager.git"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --display-chunks --progress",
    "clean:target": "del-cli ./target",
    "lint": "run-s lint:js lint:ts",
    "lint:js": "eslint -c .eslintrc.yml *.js ./server",
    "lint:ts": "tslint './src/**/*.ts'",
    "prebuild": "run-s clean:target test",
    "pretest": "run-s lint",
    "server": "cross-env NODE_ENV=development nodemon -w 'server/**/*.*' ./server/main.js",
    "server:dev": "cross-env NODE_ENV=development webpack-dev-server",
    "start": "npm run server:dev",
    "test": "cross-env NODE_ENV=test karma start --single-run",
    "test:watch": "cross-env NODE_ENV=test karma start --reporters dots"
  },
  "dependencies": {
    "@angular/common": "4.1.2",
    "@angular/compiler": "4.1.2",
    "@angular/core": "4.1.2",
    "@angular/forms": "4.1.2",
    "@angular/platform-browser": "4.1.2",
    "@angular/platform-browser-dynamic": "4.1.2",
    "@angular/router": "4.1.2",
    "@angular/upgrade": "4.1.2",
    "angularfire2": "4.0.0-rc.0",
    "core-js": "~2.4.1",
    "firebase": "3.9.0",
    "rxjs": "5.4.0",
    "uuid": "^3.0.1",
    "zone.js": "~0.8.10"
  },
  "devDependencies": {
    "@types/core-js": "~0.9.41",
    "@types/jasmine": "~2.5.36",
    "@types/node": "~7.0.18",
    "autoprefixer": "~6.5.1",
    "awesome-typescript-loader": "3.1.3",
    "copy-webpack-plugin": "~4.0.1",
    "cross-env": "~5.0.0",
    "css-loader": "~0.25.0",
    "del-cli": "~1.0.0",
    "eslint": "~3.10.2",
    "express": "~4.15.2",
    "extract-text-webpack-plugin": "2.1.0",
    "firebase-tools": "3.7.0",
    "html-webpack-plugin": "~2.28.0",
    "jasmine-core": "~2.6.1",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-jasmine": "~1.1.0",
    "karma-mocha-reporter": "~2.2.3",
    "karma-sourcemap-loader": "~0.3.7",
    "karma-webpack": "~2.0.3",
    "minx": "github:r-park/minx",
    "morgan": "~1.8.1",
    "node-sass": "~4.5.2",
    "nodemon": "~1.11.0",
    "npm-run-all": "~4.0.2",
    "postcss-loader": "~1.1.0",
    "raw-loader": "~0.5.1",
    "sass-loader": "~6.0.5",
    "style-loader": "~0.17.0",
    "ts-helpers": "~1.1.2",
    "tslint": "~3.15.1",
    "typescript": "~2.3.2",
    "webpack": "~2.5.1",
    "webpack-dev-server": "~2.4.5",
    "webpack-md5-hash": "~0.0.5",
    "winston": "~2.3.1"
  },
  "author": {
      "name": "Vasylyna Vaiman",
      "email": "vaiman.vasilisa@gmail.com"
    }
}
